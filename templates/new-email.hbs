<form>
  <div class="form-group">
    <label for="sender">Sender</label>
    {{input value=sender id="sender" class="form-control"}}
  </div>
  <div class="form-group">
   <label for="subject">Subject</label>
   {{input value=subject id="subject" class="form-control"}}
 </div>
  <div class="form-group">
    <label for="message">Email Message</label>
    {{textarea value=message id="message" class="form-control"}}
  </div>
  <button class="btn btn-default" {{action 'save'}}>Send</button>
</form>
